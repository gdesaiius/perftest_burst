# If undefined in the environment default NDDSHOME to install dir
ifndef NDDSHOME
NDDSHOME := "/home/gautam/rti_connext_dds-5.3.0"
endif

SOURCE_DIR = 

TARGET_ARCH = x64Linux3gcc5.4.0

ifndef COMPILER
COMPILER = g++
endif
COMPILER_FLAGS = -m64 -Wall
ifndef LINKER
LINKER = g++
endif
LINKER_FLAGS = -m64 -Wl,--no-as-needed
SYSLIBS = -ldl -lnsl -lm -lpthread -lrt
DEFINES = -DRTI_UNIX -DRTI_LINUX -DRTI_64BIT  -O3
ifndef DEBUG
DEBUG=0 
endif
ifeq ($(DEBUG),1)
COMPILER_FLAGS += -g -O0
LINKER_FLAGS += -g
DEBUG_SFX = d
else
DEBUG_SFX = 
endif
 
ifndef SHAREDLIB
SHAREDLIB=0
endif

ifeq ($(SHAREDLIB),1)
SHAREDLIB_SFX = 
else
SHAREDLIB_SFX = z
DEFINES += -DRTI_STATIC
endif



INCLUDES = -I. -I$(NDDSHOME)/include -I$(NDDSHOME)/include/ndds 
       
LIBS = -L$(NDDSHOME)/lib/$(TARGET_ARCH) \
        \
        \
        -lnddscpp$(SHAREDLIB_SFX)$(DEBUG_SFX) -lnddsc$(SHAREDLIB_SFX)$(DEBUG_SFX) -lnddscore$(SHAREDLIB_SFX)$(DEBUG_SFX) $(SYSLIBS) \
       
CDRSOURCES    = perftest.idl
SOURCES = $(SOURCE_DIR)perftestPlugin.cxx $(SOURCE_DIR)perftest.cxx $(SOURCE_DIR)perftestSupport.cxx $(SOURCE_DIR)RTIDDSImpl.cxx $(SOURCE_DIR)CpuMonitor.cxx $(SOURCE_DIR)PerftestTransport.cxx
COMMONSOURCES = $(notdir $(SOURCES))

EXEC          = perftest_subscriber perftest_publisher
DIRECTORIES   = objs.dir objs/$(TARGET_ARCH).dir
COMMONOBJS    = $(COMMONSOURCES:%.cxx=objs/$(TARGET_ARCH)/%.o)

# We actually stick the objects in a sub directory to keep your directory clean.
$(TARGET_ARCH) : $(DIRECTORIES) $(COMMONOBJS) \
	$(EXEC:%=objs/$(TARGET_ARCH)/%.o) \
	$(EXEC:%=objs/$(TARGET_ARCH)/%)

objs/$(TARGET_ARCH)/% : objs/$(TARGET_ARCH)/%.o
	$(LINKER) $(LINKER_FLAGS)   -o $@ $@.o $(COMMONOBJS) $(LIBS)

objs/$(TARGET_ARCH)/%.o : $(SOURCE_DIR)%.cxx  $(SOURCE_DIR)MessagingIF.h $(SOURCE_DIR)RTIDDSImpl.h $(SOURCE_DIR)perftest_cpp.h $(SOURCE_DIR)qos_string.h $(SOURCE_DIR)CpuMonitor.h $(SOURCE_DIR)PerftestTransport.h  $(SOURCE_DIR)perftest.h 
	$(COMPILER) $(COMPILER_FLAGS)  -o $@ $(DEFINES) $(INCLUDES) -c $<

